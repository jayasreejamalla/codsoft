import java.util.Scanner;

public class SimpleRuleBasedChatbot {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.println("ðŸ¤– Simple Chatbot");
        System.out.println("Type 'exit' to end the chat.");
        
        while (true) {
            System.out.print("\nYou: ");
            String input = sc.nextLine().toLowerCase();

            if (input.equals("exit")) {
                System.out.println("Chatbot: Goodbye! ðŸ‘‹");
                break;
            }
            else if (input.contains("hi") || input.contains("hello")) {
                System.out.println("Chatbot: Hello! How can I help you?");
            }
            else if (input.contains("how are you")) {
                System.out.println("Chatbot: I'm doing great! Thanks for asking.");
            }
            else if (input.contains("your name")) {
                System.out.println("Chatbot: I am SimpleBot, your chatbot friend.");
            }
            else if (input.contains("bye")) {
                System.out.println("Chatbot: Bye! Have a nice day!");
            }
            else {
                System.out.println("Chatbot: Sorry, I don't understand that.");
            }
        }

        sc.close();
    }
}
